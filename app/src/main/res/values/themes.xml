<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/black</item>
        <item name="myBackground">@style/myLightBackground</item>
        <item name="myToolBar">@style/myLightToolBar</item>
    </style>

    <style name="AppTheme_dark.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:colorBackgroundCacheHint">@color/dark_gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="myBackground">@style/myDarkBackground</item>
        <item name="myToolBar">@style/myDarkToolBar</item>
    </style>

    <style name="myLightBackground">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="myDarkBackground">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="myLightToolBar">
        <item name="android:background">@color/holo_orange_light</item>
    </style>

    <style name="myDarkToolBar">
        <item name="android:background">@color/holo_red_dark</item>
    </style>

</resources>